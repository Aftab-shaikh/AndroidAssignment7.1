<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pngbilkis"

        tools:context="com.example.user1.assignment71.MainActivity">


    <TextView
            android:text="Google Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/googletitle"
            android:background="@color/colorPrimaryDark"
            android:textSize="42dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.242" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.505"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type here"
            android:textColorHint="@color/colorAccent"
            android:ems="10"
            android:id="@+id/searchbar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/googletitle" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.321"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchbutton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/searchbar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintVertical_bias="0.47"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.486" android:background="@android:color/holo_purple"/>
</android.support.constraint.ConstraintLayout>
